<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F5EB"
    tools:context=".Plastic2Activity">

    <!-- 안내 텍스트 1 -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="396dp"
        android:layout_height="78dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="1. 스티로폼 안의 내용물을 모두 비우고\n물로 깨끗이 세척한 후 분리 배출"
        android:textStyle="bold"
        android:textColor="#1B5E20"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 안내 텍스트 2 -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="2. 박스에 붙어있는 테이프는\n완전히 떼어내서 일반쓰레기로"
        android:textStyle="bold"
        android:textColor="#1B5E20"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1" />

    <!-- 안내 텍스트 3 -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="3. 무늬가 있거나 비닐이 코팅된\n스티로폼 트레이는 재활용 불가능"
        android:textStyle="bold"
        android:textColor="#1B5E20"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <!-- 안내 텍스트 4 -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="4. 과일 개별 포장용 스티로폼은\n재활용 가치가 낮아 모두 폐기"
        android:textStyle="bold"
        android:textColor="#1B5E20"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3" />

    <!-- 관련 이미지 -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="375dp"
        android:layout_height="265dp"
        android:layout_margin="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/plasticimg2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4" />

    <!-- 뒤로가기 버튼 -->
    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.407" />
</androidx.constraintlayout.widget.ConstraintLayout>